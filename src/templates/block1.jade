- $ = locals.contents.zitate

mixin letterRorws(quotations)
    span.cd-words-wrapper.waiting
    b.is-visible=quotations[0]
    - rest = quotations.splice(1)
    each item in rest
        b=item

#index-banner.section.no-pad-bot
    .container
        h1.text_h.center.header.cd-headline.letters.type
            span
            +letterRorws($)
